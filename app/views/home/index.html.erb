                < % end %>
              </li>
              <li>
                < %= link_to teacher_path(teacher), :class => "l-courses", :title => "Cursos" do %>
                    <i class="icon"></i>Cursos
                < % end %> -->
              </li>
            </ul>
          </div>
        </div><!-- .teachers-box -->
        <% end %>
      </li>
      <ul><!-- #teachers-carousel -->
      <% end %>
  </div>
</section><!-- #teachers-box -->
