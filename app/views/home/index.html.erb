    <script type="text/javascript">
    $.ajaxSetup({ cache: false });
    $("#btn-search-course").on("click", function(){
      search = $("#q").val();
      $.post('/curso/busca', { search: search }, function(data){
        $(data).ready(function(){
          $('#load-search').empty();
          $('#load-search').html(data);
        });
      });
    });
    $(".mod-courses-box-pagination").on("click", function(){
      $('.mod-courses-box-pagination').data('type', 'html').on('ajax:success', function(event, data){
        group_id = $('.new-mod-courses-box.tab.current').find('#current-group').val()
        page = $(data).find('#group-'+group_id);
        $('.new-mod-courses-box.tab.current').empty();
        $('.new-mod-courses-box.tab.current').html(page.html());
      });
    });
    //$('.spinner-field').spinner();
    </script>

