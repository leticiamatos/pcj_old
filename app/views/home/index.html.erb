<div class="content-inner two-columns container clearfix">
<section id="teachers-box" class="box relative col col-large">
  <header class="box-header">
    <h4 class="title">Professores
      <small>
        <%= link_to teachers_path, :class => "more-a", :title => "Ver todos os professores" do %>
          Mais Professores <span class="icon arrow"></span>
        <% end %>
      </small>
    </h4>
  </header> 
  <div id="teachers-box-content" class="box-content">
