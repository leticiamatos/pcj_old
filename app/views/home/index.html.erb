              <% if teacher.id == 260 %>
                <span class="desc" style="color: #315D9F;">Coordenador Cient√≠fico</span>
              <% end %>
              <span class="desc"><%= teacher.try(:cers_subject).try(:title) %></span>
            </div>
            <ul class="teachers-links unstyled">
              <li>
                <%= link_to teacher_path(teacher), :class => "l-profile", :title => "Perfil" do %>
                <i class="icon"></i>Perfil
                <% end %>
              </li>
              <!--<li>
                < %= link_to teacher_path(teacher), :class => "l-blog", :title => "Blog" do %>
                <i class="icon"></i>Blog
                < % end %>
              </li> -->
              <li>
                <!-- < %= link_to teacher_path(teacher), :class => "l-courses", :title => "Cursos" do %>
                <i class="icon"></i>Cursos
                < % end %> -->
              </li>
            </ul>
          </div>
        </div><!-- .teachers-box -->
        <% end %>
      </li>
      <li class="teachers-carousel-li clearfix">
        <% @teachers[4, 8].each do |teacher| %>
        <div class="teachers-box">
          <%= link_to teacher_path(teacher), :class => "photo teachers-a" do %>
              <figure class="photo-border">
                <span></span>
                <%= show_image teacher.avatar, "130", "130" %>
              </figure>
          <% end %>
          <div class="teachers-content">
            <div class="teachers-top">
              <h2 class="title"><%=teacher.name%></h2>
              <span class="desc"><%= teacher.try(:cers_subject).try(:title) %></span>
            </div>
            <ul class="teachers-links unstyled">
              <li>
                <%= link_to teacher_path(teacher), :class => "l-profile", :title => "Perfil" do %>
                    <i class="icon"></i>Perfil
                <% end %>
              </li>
              <li>
                <!-- < %= link_to teacher_path(teacher), :class => "l-blog", :title => "Blog" do %>
